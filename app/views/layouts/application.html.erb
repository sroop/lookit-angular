<!DOCTYPE html>
<html>
<head>
  <title>Lookit</title>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js" %>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app="lookit">

  <ui-view></ui-view>

  <script type="text/ng-template" id="/home.html">
    <div class="page-header">
      <h1>Lookit</h1>
    </div>

    <div>
      {{test}}
    </div>

    <div ng-repeat="post in posts | orderBy: '-upvotes'">
    <span ng-click="incrementUpvotes(post)">^</span>
      <a href="{{post.link}}" ng-show="post.link">{{post.title}}</a>
      <span ng-hide="post.link">{{post.title}}</span>
      - upvotes: {{post.upvotes}}
      <span>
        <a href="#/posts/{{$index}}">Comments</a>
      </span>
    </div>

    <form ng-submit="addPost()">
      <input type="text" placeholder="Title" ng-model="title"></input>
      <input type="text" placeholder="Link" ng-model="link"></input>
      <button type="submit">Post</button>
    </form>
  </script>

  <script type="text/ng-template" id="/posts.html">
    <h2>
      <a ng-show="post.link" href="{{post.link}}">{{post.title}}</a>
      <span ng-hide="post.link">{{post.title}}</span>
    </h2>

    <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
      {{comment.upvotes}}
      {{comment.body}} --- by {{comment.author}}
    </div>

    <form ng-submit="addComment()">
      <input type="text" placeholder="Comment" ng-model="body"></input>
      <button type="submit">Comment</button>
    </form>

  </script>

</body>
</html>
